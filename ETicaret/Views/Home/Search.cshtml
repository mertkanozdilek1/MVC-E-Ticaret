
@using ETicaret.Models;
@model IEnumerable<ProductModel>




<div class="row">



    <div class="col-md-12">


        @if (Model.Count() == 0)
        {
            <div class="alert alert-warning" role="alert">
                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                Bu kategoride bir ürün bulunamadı.
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                <i class="fa fa-check-square" aria-hidden="true"></i>
                <strong>@Model.Count() adet</strong> ürün bulundu.
            </div>
        }

    </div>
</div>
            <div class="row">
                @foreach (var urun in Model)
                {
                    <div class="col-md-4 mb-2">
                        <div class="card">
                            <img class="card-img-top" src="~/Upload/@urun.Image" alt="@urun.Name">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="/Home/Details/@urun.Id"> @urun.Name</a>
                                </h4>
                                <p class="card-text description">
                                    @urun.Description
                                </p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted product-price">
                                    <i class="fa fa-try" aria-hidden="true"></i>
                                    @urun.Price
                                </small>
                                <a href="/Home/Details/@urun.Id" class="btn btn-default btn-primary btn-sm float-right">
                                    <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                    Ürünü incele
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
